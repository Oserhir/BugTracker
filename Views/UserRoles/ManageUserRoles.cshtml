@model IEnumerable<TheBugTracker.Models.ViewModels.ManageUserRolesViewModel>



<div class="d-flex align-items-center">
    <a class="" asp-action="AllTickets" asp-controller="Tickets" 
    style="color: rgb(23, 123, 227); margin-right : 15px" >  <i class="fa fa-arrow-left fa-lg" aria-hidden="true"></i> </a>
    <h4 class="mb-0">Manage Member Roles</h4>
</div>

<div class="d-flex align-items-center" style="margin-bottom : 20px">
    <a class="" asp-action="Dashboard" asp-controller="Home" style="color: rgb(23, 123, 227); margin-right : 15px" >  <i class="fa fa-home fa-lg" aria-hidden="true"></i> </a>
    <p class="mb-0" style="margin-right : 5px">/ UserRoles</p>
    <p class="mb-0">/ ManageUserRoles</p>
</div>


<hr />



    <div class="row">
                                <!-- Column starts -->
                                <div class="col-xl-12">
                                    <div class="card dz-card" id="bootstrap-table1">
                                        <div class="card-header flex-wrap border-0">
                                            <div>
                                                <h4 class="card-title">Manage Member Roles</h4>

                                            </div>

                                        </div>
                                        <!--tab-content-->
                                        <div class="tab-content" id="myTabContent">
                                            <div class="tab-pane fade show active" id="Preview" role="tabpanel" aria-labelledby="home-tab">
                                                <div class="card-body pt-0">
                                                    <div class="table-responsive">
                                                        <table class="table table-responsive-md">
                                                            <thead>
                                                                <tr>
                                                                    <th style="width:80px;"><strong>First Name</strong></th>
                                                                    <th><strong>Last Name</strong></th>
                                                                    <th><strong>Email</strong></th>
                                                                    <th><strong>Role</strong></th>
                                                                  
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                               

                                                              @foreach (var member in Model)
                                                          {   
                                                                    <tr>
                                                <td>
                                                @member.BTUser.FirstName
                                                </td>
                                                <td>
                                                @member.BTUser.LastName
                                                </td>
                                                <td>
                                                @member.BTUser.Email
                                                </td>
                                                <td>
                                                    <form asp-action="ManageUserRoles" asp-controller="UserRoles" method=post>
                                                        <input type="hidden" asp-for="@member.BTUser.Id" />
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <div class="form-group">
                                                                    <select required asp-for="@member.SelectedRoles" class="form-control" asp-items="@member.Roles" multiple></select>
                                                                </div>
                                                            </div>
                                                            <div class="col-6 align-self-center">
                                                                <div class="form-group">
                                                                    <input type="submit" value="Assign Role(s)" class="btn btn-sm btn-info text-white" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </td>
                                            </tr>
                                                              }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>

                                            </div>




