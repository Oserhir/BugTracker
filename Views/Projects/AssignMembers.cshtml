@model TheBugTracker.Models.ViewModels.ProjectMembersViewModel

@{
    ViewData["Title"] = "Assign Members";
}


<div class="d-flex align-items-center">
        <a class="" asp-action="UnassignedProjects" asp-controller="Projects" style="color: rgb(23, 123, 227); margin-right : 15px" >  
            <i class="fa fa-arrow-left fa-lg" aria-hidden="true"></i> 
        </a>
        <h4 class="mb-0">Assign Members</h4>
</div>

<div class="d-flex align-items-center" style="margin-bottom : 20px">
        <a class="" asp-action="Dashboard" asp-controller="Home" style="color: rgb(23, 123, 227); margin-right : 15px" >  
            <i class="fa fa-home fa-lg" aria-hidden="true"></i> </a>
        <p class="mb-0" style="margin-right : 5px">/ Projects</p>
        <p class="mb-0">/ Assign Members</p>
</div>


<div class="">
    <div class="row">

        <div class="col-md-6">

            <div class="card shadow mt-4">

                <div class="card-body">
                    <form method="post" asp-action="AssignMembers" asp-controller="Projects">

                        <input hidden asp-for="Project.Id"/>

                        <h6></h6>
                        <p></p>

                        <div class="form-group">
                            <label style="margin-bottom : 10px" class="col-form-label"><strong>Select Project Manager</strong></label>
                            @*   <select required asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple ></select> *@
                            <select required multiple class="default-select form-control wide mt-3"  asp-items="@Model.Users" asp-for="@Model.SelectedUsers" >
                            </select>
                        </div>

                       

                        <div class="form-group mt-3">
                            <input type="submit" value="Assign Users" class="btn btn-primary"/>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>