@model TheBugTracker.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex align-items-center">
	<a class="" asp-action="AllTickets" asp-controller="Tickets" style="color: rgb(23, 123, 227); margin-right : 15px" >  <i class="fa fa-arrow-left fa-lg" aria-hidden="true"></i> </a>
	<h4 class="mb-0">New Ticket</h4>
</div>

<div class="d-flex align-items-center" style="margin-bottom : 20px">
	<a class="" asp-action="Dashboard" asp-controller="Home" style="color: rgb(23, 123, 227); margin-right : 15px" >  <i class="fa fa-home fa-lg" aria-hidden="true"></i> </a>
	<p class="mb-0" style="margin-right : 5px">/ Tickets</p>
	<p class="mb-0">/ Create</p>
</div>



	<div class="col-xl-9 col-lg-8">
						<div class="card profile-card card-bx m-b30">
							<form asp-action="Create" class="profile-form">
								<div class="card-body">
									<div class="row">
										<div class="form-group">
											<label class="form-label">Title</label>
											 <input asp-for="Title" class="form-control" />
											 <span asp-validation-for="Title" class="text-danger"></span>
										</div>
										<div class="col-sm-6 m-b30"> </div>
										<div class="form-group">
											<label class="form-label">Description</label>
											<textarea asp-for="Description" class="form-control" placeholder=""></textarea>
											<span asp-validation-for="Description" class="text-danger"></span>
										</div>
										<div class="col-sm-6 m-b30"> </div>
										 <div class="form-group">
											<label asp-for="ProjectId" class="control-label"></label>
											<select asp-for="ProjectId" class ="form-control" asp-items="ViewBag.ProjectId"></select>
										</div>
										<div class="col-sm-6 m-b30"></div>
										 <div class="form-group">
											<label asp-for="TicketTypeId" class="control-label"></label>
											<select asp-for="TicketTypeId" class ="form-control" asp-items="ViewBag.TicketTypeId"></select>
										</div>
										<div class="col-sm-6 m-b30"></div>
										<div class="col-sm-6 m-b30">
										</div>
										 <div class="form-group">
											<label asp-for="TicketPriorityId" class="control-label"></label>
											<select asp-for="TicketPriorityId" class ="form-control" asp-items="ViewBag.TicketPriorityId"></select>
										</div>
									</div>
								</div>

								 <div style= "margin-top : 23px" class="card-footer">
									<input type="submit" value="Create" class="btn btn-primary" />
								</div>
								
							</form>
						</div>
					</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
