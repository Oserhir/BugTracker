                                                    </tr>

                                                     <tr>
                                                        <th>  @Html.DisplayNameFor(model => model.OwnerUser) </th>
                                                        <td>   @Html.DisplayFor(model => model.OwnerUser.FullName) </td>
                                                    </tr>

                                                     <tr>
                                                        <th>   @Html.DisplayNameFor(model => model.DeveloperUser) </th>
                                                        <td>      @Html.DisplayFor(model => model.DeveloperUser.FullName) </td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <div style = "margin: 20px" > 
